{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.js"
  ]
}
